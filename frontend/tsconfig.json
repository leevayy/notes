{
    "compilerOptions": {
        "isolatedModules": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "src/*": [
                "src/*"
            ],
            "typings/*": [
                "typings/*"
            ],
            "@dto/*": [
                "../dto/*"
            ]
        },
        "types": [
            "vite/client"
        ],
        "baseUrl": ".",
        "outDir": "build",
        "declaration": true,
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "postCssOptions": {
                        "useConfig": true
                    }
                }
            }
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src",
        "./typings/*.d.ts",
        "*.ts",
        "dist",
        "api/**/*.ts"
    ]
}
